extends ../shared/template

block content
  h1 Create Test

  form(method='PUT', action='/user/courses/#{course._id}/lesson/#{lesson._id}/test')
    .time-limit-container
      input(type='number', name='time-limit', placeholder='Enter Test Time Limit')
    .passing-score-container
      input(type='number', name='passing-score', placeholder='Enter Test Passing Score')
    .question-answer-container
      input.question(type='text', name='quesion', placeholder='Enter Question')
        .test-answer
          h3 Select the checkbox of all correct answers.
          label A
          input.answer-a(type='text', name'answer-a', placeholder='Enter Answer')
          input(type='checkbox')
          label B
          input.answer-b(type='text', name'answer-b', placeholder='Enter Answer')
          input(type='checkbox')
          label C
          input.answer-c(type='text', name'answer-c', placeholder='Enter Answer')
          input(type='checkbox')
          label D
          input.answer-d(type='text', name'answer-d', placeholder='Enter Answer')
          input(type='checkbox')
    button(type='submit', class='btn btn-default') Create Test
