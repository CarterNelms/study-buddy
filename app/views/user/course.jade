extends ../shared/template

block content
  h1 Edit Course

  button(id='create', class='btn btn-success',onClick="window.location.href='/user/courses/#{course._id}/lesson/new'") Create a Lesson
  button(id='delete', class='btn btn-danger') Delete Course

  form(method='PUT', action='/user/courses/#{course._id}')
    .form-group
      label Course Name
      input.form-control(type='text', name='name', placeholder='Enter Course Name')
    .form-group
      label Course Description
      textarea.form-control(type='text',name='description', placeholder='Enter Course Description')
    .form-group
      label Course Subject
      select.form-control(type='text', name='subject')
        option Select Course Subject
        option Agriculture
        option Culinary
        option Computer Science
        option History
        option Math
        option Languages
        option Science
    button(type='submit', class='btn btn-default') Submit

    h2 Course Lesson
      table.table
        thead
          tr
            th Lesson Name
        tbody
          each lesson in lessons
            tr
              td= lesson.name
              td= lesson.description
