extends ../shared/template

block content
  h1 #{lesson.name} Test

  form(method='POST', action='/user/#{userId}/lessons/#{lesson._id}/test')
    .time-limit-container
    each question in questions
      .question-container
        p(class='question')= question.question
        label A
        p(class='answer', data-answer='a')= question.answer-a
        input(type='checkbox', data-answer-checkbox='a')
        label B
        p(class='answer', data-answer='b')= question.answer-b
        input(type='checkbox',data-answer-checkbox='b')
        label C
        p(class='answer', data-answer='c')= question.answer-c
        input(type='checkbox',data-answer-checkbox='c')
        label D
        p(class='answer', data-answer='d')= question.answer-d
        input(type='checkbox',data-answer-checkbox='d')
    button(type='submit', class='btn btn-default') Submit Test
