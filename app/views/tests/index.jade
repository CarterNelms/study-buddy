extends ../shared/template

block content
  h1 #{lesson.name} Test

  form(method='POST', action='/user/#{userId}/lessons/#{lesson._id}/test')
    .time-limit-container
    each question in questions
      .question-container
        p(class='question')= question.question
          each answer in answers
            p(class='answer', data-answer='question.answer')= question.answer
            input(type='checkbox')
    button(type='submit', class='btn btn-default') Submit Test
